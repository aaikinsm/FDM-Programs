<body>

	<div id="navbar" style="background-color: #22A" class="navbar navbar-fixed-top navbar-inverse">
		<span id="headerText">Welcome ${user.firstName} ${user.lastName }</span>
		<ul class="nav navbar-nav navbar-right">
			<li><a href="#">Dashboard</a></li>
			<li><a href="#">Teacher Profile</a></li>
			<li><a href="logout">Logout</a></li>
		</ul>
	</div>
	<center>
		<c:if test="${not empty examList}">
			<h4>Exams you have created</h4>
			<table id="examTable">
				<tbody>
					<c:forEach items="${examList}" var="exam">
						<tr id="${exam.id}">
							<td><strong>${ exam.title }</strong></td>
							<td><button class="examResultBtn" id="${exam.id}">View Results</button></td>
							<td><button class="examInitiator" id="${exam.id}">Test Run</button></td>
							<td><button class="examDelete" id="${exam.id}">Delete</button></td>
						</tr>
					</c:forEach>
				</tbody>
			</table>
		</c:if>

		<br />
		<c:if test="${not empty examList}">
			<h4>Submitted Results</h4>
			<table id="resultTable">
			<thead>
					<tr>
						<th>Title</th>
						<th>Student</th>
						<th>Correct</th>
						<th>Mark</th>
						<th>Status</th>
					</tr>
				</thead>
				<tbody>
					<c:forEach items="${examList}" var="exam">
						<c:forEach items="${exam.results}" var="result">
						<tr class="resultRow result_${result.resultId}">
							<td><strong>${ result.exam.title }</strong></td>
							<td>${ result.user.firstName } ${ result.user.lastName }</td>
							<td>${ result.getCorrect() } out of ${ result.getTotal() }</td>
							<td>${ result.calculateResult() }%</td>
							<c:choose>
								<c:when test="${ result.passed() == true }">
									<td style="color: green">Pass</td>
								</c:when>
								<c:otherwise>
									<td style="color: red">Fail</td>
								</c:otherwise>
							</c:choose>
						</tr>
						</c:forEach>
					</c:forEach>
				</tbody>
			</table>
		</c:if>
		
		
		
		
		
		
		
		<br />
	</center>
</body>
