$(document).ready(function(){
	var flag = true;
	$("#b1").click(function(){
		if (flag){
			$("#div1").fadeOut();
			$("#b1").text("Show");
			flag = false;
		}
		else {
			$("#div1").fadeIn();
			$("#b1").text("Hide");
			flag = true;
		}
	})
	
	$("#query").keyup(function(){
		$("#para1").html($("#query").val());
	})
})