package com.fdmgroup.view;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JTextField;

public class CreateExamView extends JFrame{


	private static final long serialVersionUID = 1L;
	
	JLabel heading;
	JTextField questionText;
	JTextField ans1;
	JTextField ans2;
	JTextField ans3;
	JTextField ans4;
	JButton addQButton;
	JButton doneButton;
	
	public CreateExamView(){
		this.setSize(500,300);
		this.setVisible(true);
		this.setDefaultCloseOperation(EXIT_ON_CLOSE);
		init();
	}

	private void init() {
		heading = new JLabel("Enter the exam information below.");
		questionText = new JTextField();
		ans1 = new JTextField();
		ans2 = new JTextField();
		ans3 = new JTextField();
		ans4 = new JTextField();
		addQButton = new JButton("Add another question");
		doneButton = new JButton("DONE");
	}
	
}
